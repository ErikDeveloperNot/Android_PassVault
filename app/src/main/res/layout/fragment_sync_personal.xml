<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:isScrollContainer="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_sync_personal_dialog_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/fragment_sync_personal_server_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:nextFocusDown="@+id/fragment_sync_personal_protocol_edittext"
                android:hint="@string/fragment_sync_personal_server_hint"
                android:singleLine="true" />

            <EditText
                android:id="@+id/fragment_sync_personal_protocol_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:nextFocusDown="@+id/fragment_sync_personal_port_edittext"
                android:hint="@string/fragment_sync_personal_protocol_hint"
                android:singleLine="true" />

            <EditText
                android:id="@+id/fragment_sync_personal_port_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:nextFocusDown="@+id/fragment_sync_personal_database_edittext"
                android:hint="@string/fragment_sync_personal_port_hint"
                android:singleLine="true" />

            <EditText
                android:id="@+id/fragment_sync_personal_database_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:nextFocusDown="@+id/fragment_sync_personal_username_edittext"
                android:hint="@string/fragment_sync_personal_database_hint"
                android:singleLine="true" />

            <EditText
                android:id="@+id/fragment_sync_personal_username_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:nextFocusDown="@+id/fragment_sync_personal_password_edittext"
                android:hint="@string/fragment_sync_personal_user_hint"
                android:singleLine="true" />

            <EditText
                android:id="@+id/fragment_sync_personal_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/fragment_sync_personal_password_hint"
                android:password="true"
                android:singleLine="true" />

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="140dp">

        <Button
            android:id="@+id/fragment_sync_personal_left_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_sync_personal_left_button"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/fragment_sync_personal_right_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_sync_personal_right_button"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>